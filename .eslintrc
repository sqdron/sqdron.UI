{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false,
    "BACKEND_API"  : false
  },
  "rules": {
    "key-spacing" : [0],
    "space-before-function-paren"  : 0,
    "no-trailing-spaces"           : 0,
    "babel/generator-star-spacing" : 1,
    "generator-star-spacing"       : 0,
    "jsx-quotes"                   : [2, "prefer-single"],
    "max-len"                      : [2, 120, 2],
    "object-curly-spacing"         : [2, "always"],
    "react/jsx-space-before-closing": [0]
  }
}
